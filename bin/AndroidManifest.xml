<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.game.alias"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.SEND_SMS" >
    </uses-permission>
    <uses-permission android:name="android.permission.RECEIVE_SMS" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/word"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.game.alias.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:windowSoftInputMode="stateUnchanged"
            android:name="com.game.alias.ConnectServerActivity"
            android:label="@string/title_activity_connect_server" >
        </activity>
        <activity
            android:name="com.game.alias.StartServerActivity"
            android:label="@string/title_activity_start_server" >
        </activity>
        <activity
            android:name="com.game.alias.GameMasterActivity"
            android:label="@string/title_activity_game" >
        </activity>
        <activity
            android:name="com.game.alias.ServerStartedActivity"
            android:label="@string/title_activity_server_started" >
        </activity>
        <activity
            android:name="com.game.alias.SendIPActivity"
            android:label="@string/title_activity_send_ip" >
        </activity>
        <activity
            android:name="com.game.alias.GuesserGameActivity"
            android:label="@string/title_activity_guesser_game" >
        </activity>
    </application>

</manifest>